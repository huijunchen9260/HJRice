#!/bin/sh

# ModelMID=$(xinput --list | grep "Barcode Reader  Mouse" | cut -f 2 | cut -d '=' -f 2)
# veloID=$(xinput list-props $ModelMID | grep "Velocity" | cut -f 2 | cut -d ' ' -f 5 | cut -d '(' -f 2 | cut -d ')' -f 1)
 consID=$(xinput list-props $ModelMID | grep "Constant" | cut -f 2 | cut -d ' ' -f 5 | cut -d '(' -f 2 | cut -d ')' -f 1)

ModelMID=$(xinput --list | grep "slave  pointer" | grep "Lenovo ThinkPad Compact USB Keyboard with TrackPoint" | cut -f 2 | cut -d '=' -f 2)
accelID=$(xinput list-props $ModelMID | grep "Accel Speed" | cut -f 2 | cut -d ' ' -f 5 | cut -d '(' -f 2 | cut -d ')' -f 1)
# consID=$(xinput list-props $ModelMID | grep "Constant" | cut -f 2 | cut -d ' ' -f 5 | cut -d '(' -f 2 | cut -d ')' -f 1)

xinput set-prop $ModelMID $accelID 0.5 || exit 0
